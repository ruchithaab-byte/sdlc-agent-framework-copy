apiVersion: kuma.io/v1alpha1
kind: Dataplane
metadata:
  name: legacy-app-vm
  namespace: legacy-apps
spec:
  networking:
    address: 192.168.1.100
    inbound:
      - port: 8080
        servicePort: 8080
        tags:
          kuma.io/service: legacy-app
          kuma.io/protocol: http
    transparentProxying:
      redirectPortInbound: 15006
      redirectPortOutbound: 15001

